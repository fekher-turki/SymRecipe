{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Modification du Mot de pass de l'utilisateur
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="mt-4">Formulaire de modification d'un utilisateur</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{{ form(form) }}
		</div>

	{% endblock %}
